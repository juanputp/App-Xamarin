<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">
    <StackLayout Margin="20">
        <Frame BackgroundColor="Orange"  Padding="24" Margin="60 0 60 0" CornerRadius="20" HeightRequest="350">
            <Label Text="Welcome" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" FontSize="40"/>
        </Frame>
        <Frame BorderColor="Orange" CornerRadius="20" HasShadow="True">
            <StackLayout>
                <Button Text="Login"  HorizontalOptions="Center" FontSize="30" Padding="20" CornerRadius="15"/>
                <Label Text="Register" TextColor="Gray" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" />
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
